@import url(reset.css)

body
	font-family arial,'microsoft yahei'
.header
	--header-height 116px
	--padddint 40px
	@media(max-width 800px)
		--header-height 80px
		--padddint 20px
	.brand
		width 155px
		height var(--header-height)
		background url() left center no-repeat
		@media(max-width 800px)
			background-size auto 60%
	.nav
		padding var(--padddint) 0
		line-height calc(var(--header-height) - var(--padddint) * 2)
		height calc(var(--header-height) - var(--padddint) * 2)
		a
			margin 0 0px 0 20px
			padding 0 20px
			text-transform capitalize
			transition 0.3s
			&:hover
				color #000
				border-radius 10px
				background #ccc
.main
	.banner
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		justify-content center
		height 675px
		color #fff
		line-height 1.2
		text-align center
		background url(../img/products.jpg) center center no-repeat
		transition 0.3s
		@media(max-width 800px)
			height 400px
		.wrap
			width 100%
		h2
			font-size 50px
			font-weight bold
			@media(max-width 800px)
				font-size 30px
		h3
			font-size 34px
			font-weight normal
			@media(max-width 800px)
				font-size 20px
		input
			--input-height 50px
			--padding 10px
			height var(--input-height)
			border none
			border-radius 3px
			box-sizing border-box
			outline none
			padding var(--padding)
			line-height calc(var(--input-height) - var(--padding)*2)
			font-size 17px
			@media(max-width 800px)
				--input-height 40px
				font-size 16px
		.form
			padding-top 80px
		.text
			width 440px
			color #666
			transition 0.3s
			@media(max-width 800px)
				width 50%
			&::placeholder
				color #999
				font-family 'arial','microsoft yahei'
			&:hover
				padding-left 30px
				border-radius 20px
		.submit
			margin-left 10px
			width 160px
			color #fff
			text-transform uppercase
			background #12a4dd
			transition 0.3s
			&:hover
				padding-left 30px
				border-radius 20px
	.public-section
		text-align center
		h2
			padding 50px 0 60px
			font-size 24px
			color #12a4dd
			text-transform capitalize
		.maxw200
			max-width 200px
			margin 0 auto
		.icon
			height 128px
			background url() center center/96px auto no-repeat
			&.w65
				background-size 65px auto
			&.w41
				background-size 41px auto
			&.w54
				background-size 54px auto
			&.w63
				background-size 63px auto
			&.w46
				background-size 46px auto
			&.w54
				background-size 54px auto
			&.w96
				background-size 96px auto
			&.w92
				background-size 92px auto
		h3
			padding 25px 0 20px
			font-size 18px
			color #2e2e2e
			line-height 1.5
			text-transform uppercase
		p
			font-size 14px
			color #2e2e2e
			line-height 24px
		.btn-tips
			padding 50px 0 10px
			text-align center
			font-size 14px
			color #413c49
			line-height 1.5
		.btn-default
			display block
			margin 0 auto
			width 204px
			height 40px
			font-size 18px
			color #fff
			line-height 40px
			text-align center
			text-transform uppercase
			background #12a4dd
			transition 0.3s
			border-radius 3px
			&:hover
				color #12a4dd
				background #fff
				border-radius 20px
				padding-left 20px
		.bdb
			padding-top 70px
			border-bottom 1px solid #e1e1e1
	.how-it-works
		.bg
			background url(../img/hico-10.svg) 33.33% 60px/10px auto no-repeat,
			url(../img/hico-10.svg) 66.66% 60px/10px auto no-repeat
			@media(max-width 1200px)
				background none
		.pb50
			@media(max-width 1200px)
				padding-bottom 50px
				background url(../img/hico-11.svg) center bottom 10px/20px auto no-repeat
	.choose
		padding-bottom 90px
		@media(max-width 768px)
			.df
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				flex-wrap wrap
				justify-content space-between
				&>*
					flex 0 0 49%
					box-sizing border-box
				
.footer
	background #252a33
	.top
		min-height 460px
		@media(max-width 1200px)
			padding-bottom 20px
		h3
			padding 60px 0 20px
			font-size 24px
			color #fff
			@media(max-width 768px)
				margin 0 auto
				width 80%
				text-align center
		p
			padding-top 10px
			font-size 14px
			color #999
			line-height 22px
			@media(max-width 768px)
				margin 0 auto
				width 80%
				text-align center
		.h100
			height 100px
			@media(max-width 768px)
				height 30px
		.tel
		.mail
			display block
			@media(max-width 768px)
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				justify-content center
			span
				float left
				font-size 14px
				color #fff
				line-height 36px
				height 36px
			.icon
				display block
				width 40px
				background url() center center no-repeat
		.pl20
			padding-left 20px
			@media(max-width 768px)
				padding-left 0
				text-align center
			h3
				padding-bottom 8px
				span
					position relative
					&:after
						content ""
						position absolute
						right -30px
						top 0
						bottom 0
						width 30px
						background url('../img/hico-11.svg') center center/16px auto no-repeat
						display none
						@media(max-width 768px)
							display block
			.drop-down
				@media(max-width 768px)
					display none
				@media(min-width 768px)
					display block!important
		.item
			font-size 14px
			color #12a4dd
			line-height 30px
	.bottom
		.p30-0-75
			padding 35px 0 75px
		.bdt
			border-top 1px solid #3a3a3a				
		.copy-right
			font-size 12px
			color #999
			line-height 30px
			@media(max-width 768px)
				width 100%
				text-align center
			&+.copy-right
				padding-left 50px
				@media(max-width 768px)
					padding-left 0
		.brand-list
			text-align right
			font-size 0
			@media(max-width 1200px)
				padding-top 30px
			@media(max-width 768px)
				text-align center
				padding-top 0
			a
				display inline-block
				margin-left 20px
				@media(max-width 768px)
					margin-top 30px
				img
					display block

.layout-fix
	.contact-us
		position fixed
		left 50%
		bottom 0
		margin-left 385px
		padding 0 40px 0 30px
		height 40px
		line-height 40px
		text-align center
		font-size 14px
		color #fff
		background #5ba0d0
		border-radius 5px 5px 0 0
		@media(max-width 1300px)
			right 0
			left auto
			margin-left 0
		span
			float left
		.icon
			width 50px
			height 100%
			background url() center center no-repeat
	.up
		position fixed
		bottom 200px
		left 50%
		margin-left 525px
		transform translateY(100%)
		opacity 0
		transition 0.3s
		@media(max-width 1300px)
			right 0
			left auto
		&.active
			transform translateY(0)
			opacity 1
